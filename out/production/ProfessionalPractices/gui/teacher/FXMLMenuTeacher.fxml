<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.teacher.FXMLMenuTeacherController">
   <children>
      <ImageView fx:id="imgGenerateActivity" fitHeight="400.0" fitWidth="600.0" layoutY="1.0" pickOnBounds="true">
         <image>
            <Image url="@../images/background.png" />
         </image>
      </ImageView>
      <ImageView fx:id="imgLogoTeacher" fitHeight="85.0" fitWidth="103.0" layoutX="10.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logoTeacher.jpg" />
         </image>
      </ImageView>
      <Label fx:id="lbTeacher" layoutX="34.0" layoutY="112.0" text="Teacher">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <ImageView fx:id="imgLogOut" fitHeight="30.0" fitWidth="47.0" layoutX="475.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logout.png" />
         </image>
      </ImageView>
      <Button fx:id="btnLogOut" layoutX="505.0" layoutY="18.0" mnemonicParsing="false" onAction="#logOut" text="LogOut" textFill="#15206b">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label fx:id="lbActivities" layoutX="230.0" layoutY="99.0" text="Activities" textFill="#1e4a21">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="btnGenerateActivity" layoutX="215.0" layoutY="160.0" mnemonicParsing="false" onAction="#generateActivity" prefHeight="49.0" prefWidth="156.0" text="Generate activity">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
